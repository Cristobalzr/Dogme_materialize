<div class="row center">
  <div class="col s5 container ">
    <div class="">
      <p><%= image_tag @publication.photo.url, class: 'materialboxed responsive-img' %></p>
      <div class="container">
        <h1><%= @publication.name %></h1>
        <p><%= @publication.description  %></p>
        <p>Encontrado por</p>
        <div class="chip">
          Encontrado por <%= @publication.user.email.partition('@').first %>
        </div>

      </div>
    </div>
  </div>
  <div class="col s7">
    <div class="">
  		<div class="container" id="mapid">
  		</div>
  	</div>
  </div>
</div>

<script>
	document.addEventListener('DOMContentLoaded', function(){
	    var mymap = null;
			mymap = L.map('mapid').setView([<%= @publication.latitude %>, <%= @publication.longitude %>], 16);
	    createMap(mymap);
      L.circle([<%= @publication.latitude %>, <%= @publication.longitude %>], {
        radius: 100
      }).addTo(mymap);
	});
</script>
